<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="TextExtractorWin.Views.LanguagesSettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TextExtractorWin.Views">

    <ScrollViewer>
        <StackPanel Spacing="4" Padding="0,0,24,24">
            <TextBlock Text="OCR Languages" Style="{StaticResource TitleTextBlockStyle}" Margin="0,0,0,24"/>

            <InfoBar
                IsOpen="True"
                IsClosable="False"
                Severity="Informational"
                Title="Language Support"
                Message="Available languages depend on Windows language packs installed on your system. Install additional language packs from Windows Settings > Time &amp; Language > Language &amp; Region."
                Margin="0,0,0,24"/>

            <!-- Primary Language -->
            <TextBlock Text="Primary Language" Style="{StaticResource SubtitleTextBlockStyle}" Margin="0,0,0,12"/>

            <ComboBox x:ConnectionId='2'
                x:Name="LanguageComboBox"
                Header="Select OCR language"
                Width="300"
                                                                    
                Margin="0,0,0,24"/>

            <!-- Available Languages -->
            <TextBlock Text="Available Languages" Style="{StaticResource SubtitleTextBlockStyle}" Margin="0,0,0,12"/>

            <ListView x:ConnectionId='3'
                x:Name="LanguagesListView"
                SelectionMode="None"
                MaxHeight="400">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid Padding="8,4">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="{Binding DisplayName}" Grid.Column="0"/>
                            <TextBlock Text="{Binding LanguageTag}"
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                       FontFamily="Consolas"
                                       FontSize="12"
                                       Grid.Column="1"/>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackPanel>
    </ScrollViewer>
</Page>

