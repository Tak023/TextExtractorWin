<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="TextExtractorWin.Views.ShortcutsSettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TextExtractorWin.Views">

    <ScrollViewer>
        <StackPanel Spacing="4" Padding="0,0,24,24">
            <TextBlock Text="Keyboard Shortcuts" Style="{StaticResource TitleTextBlockStyle}" Margin="0,0,0,24"/>

            <InfoBar
                IsOpen="True"
                IsClosable="False"
                Severity="Informational"
                Title="Global Hotkeys"
                Message="These shortcuts work even when the app is minimized to the system tray."
                Margin="0,0,0,24"/>

            <!-- Capture with Line Breaks -->
            <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    CornerRadius="8" Padding="16" Margin="0,0,0,12">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Capture Text (with line breaks)" FontWeight="SemiBold"/>
                        <TextBlock Text="Preserves original line structure from the image"
                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                   FontSize="12"/>
                    </StackPanel>
                    <Border Grid.Column="1" Background="{ThemeResource ControlFillColorDefaultBrush}"
                            CornerRadius="4" Padding="12,8">
                        <TextBlock x:Name="Hotkey1Text" Text="Ctrl + Shift + 1" FontFamily="Consolas"/>
                    </Border>
                </Grid>
            </Border>

            <!-- Capture without Line Breaks -->
            <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    CornerRadius="8" Padding="16" Margin="0,0,0,12">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Capture Text (no line breaks)" FontWeight="SemiBold"/>
                        <TextBlock Text="Joins all text into a single line"
                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                   FontSize="12"/>
                    </StackPanel>
                    <Border Grid.Column="1" Background="{ThemeResource ControlFillColorDefaultBrush}"
                            CornerRadius="4" Padding="12,8">
                        <TextBlock x:Name="Hotkey2Text" Text="Ctrl + Shift + 2" FontFamily="Consolas"/>
                    </Border>
                </Grid>
            </Border>

            <!-- Capture and Speak -->
            <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    CornerRadius="8" Padding="16" Margin="0,0,0,24">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Capture &amp; Speak" FontWeight="SemiBold"/>
                        <TextBlock Text="Captures text and reads it aloud"
                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                   FontSize="12"/>
                    </StackPanel>
                    <Border Grid.Column="1" Background="{ThemeResource ControlFillColorDefaultBrush}"
                            CornerRadius="4" Padding="12,8">
                        <TextBlock x:Name="Hotkey3Text" Text="Ctrl + Shift + 3" FontFamily="Consolas"/>
                    </Border>
                </Grid>
            </Border>

            <InfoBar
                IsOpen="True"
                IsClosable="False"
                Severity="Warning"
                Title="Custom Shortcuts"
                Message="Custom hotkey configuration will be available in a future update."
                Margin="0,0,0,24"/>
        </StackPanel>
    </ScrollViewer>
</Page>
