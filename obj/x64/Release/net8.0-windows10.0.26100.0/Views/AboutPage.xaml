<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="TextExtractorWin.Views.AboutPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TextExtractorWin.Views">

    <ScrollViewer>
        <StackPanel Spacing="4" Padding="0,0,24,24">
            <TextBlock Text="About" Style="{StaticResource TitleTextBlockStyle}" Margin="0,0,0,24"/>

            <!-- App Info -->
            <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    CornerRadius="8" Padding="24" Margin="0,0,0,24">
                <StackPanel HorizontalAlignment="Center">
                    <FontIcon Glyph="&#xE8C3;" FontSize="64" Margin="0,0,0,16"
                              Foreground="{StaticResource AccentBrush}"/>
                    <TextBlock Text="TextExtractor" FontSize="28" FontWeight="SemiBold"
                               HorizontalAlignment="Center"/>
                    <TextBlock x:ConnectionId='2' x:Name="VersionText" Text="Version 1.0.0"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                               HorizontalAlignment="Center" Margin="0,4,0,0"/>
                    <TextBlock Text="A modern OCR text extraction tool for Windows 11"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                               HorizontalAlignment="Center" Margin="0,8,0,0"
                               TextAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- Features -->
            <TextBlock Text="Features" Style="{StaticResource SubtitleTextBlockStyle}" Margin="0,0,0,12"/>

            <StackPanel Spacing="8" Margin="0,0,0,24">
                <StackPanel Orientation="Horizontal" Spacing="12">
                    <FontIcon Glyph="&#xE8C3;" Foreground="{StaticResource AccentBrush}"/>
                    <TextBlock Text="Extract text from any screen region using OCR"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Spacing="12">
                    <FontIcon Glyph="&#xE765;" Foreground="{StaticResource AccentBrush}"/>
                    <TextBlock Text="Global hotkeys work even when minimized"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Spacing="12">
                    <FontIcon Glyph="&#xE767;" Foreground="{StaticResource AccentBrush}"/>
                    <TextBlock Text="Text-to-speech reads captured text aloud"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Spacing="12">
                    <FontIcon Glyph="&#xF2B7;" Foreground="{StaticResource AccentBrush}"/>
                    <TextBlock Text="Support for multiple languages"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Spacing="12">
                    <FontIcon Glyph="&#xE81C;" Foreground="{StaticResource AccentBrush}"/>
                    <TextBlock Text="Capture history for easy access"/>
                </StackPanel>
            </StackPanel>

            <!-- Keyboard Shortcuts -->
            <TextBlock Text="Quick Reference" Style="{StaticResource SubtitleTextBlockStyle}" Margin="0,0,0,12"/>

            <Grid Margin="0,0,0,24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Border Background="{ThemeResource ControlFillColorDefaultBrush}"
                        CornerRadius="4" Padding="8,4" Margin="0,4"
                        Grid.Column="0" Grid.Row="0">
                    <TextBlock Text="Ctrl+Shift+1" FontFamily="Consolas"/>
                </Border>
                <TextBlock Text="Capture text with line breaks" VerticalAlignment="Center"
                           Margin="12,0,0,0" Grid.Column="1" Grid.Row="0"/>

                <Border Background="{ThemeResource ControlFillColorDefaultBrush}"
                        CornerRadius="4" Padding="8,4" Margin="0,4"
                        Grid.Column="0" Grid.Row="1">
                    <TextBlock Text="Ctrl+Shift+2" FontFamily="Consolas"/>
                </Border>
                <TextBlock Text="Capture text without line breaks" VerticalAlignment="Center"
                           Margin="12,0,0,0" Grid.Column="1" Grid.Row="1"/>

                <Border Background="{ThemeResource ControlFillColorDefaultBrush}"
                        CornerRadius="4" Padding="8,4" Margin="0,4"
                        Grid.Column="0" Grid.Row="2">
                    <TextBlock Text="Ctrl+Shift+3" FontFamily="Consolas"/>
                </Border>
                <TextBlock Text="Capture and speak text" VerticalAlignment="Center"
                           Margin="12,0,0,0" Grid.Column="1" Grid.Row="2"/>
            </Grid>

            <!-- Credits -->
            <TextBlock Text="Credits" Style="{StaticResource SubtitleTextBlockStyle}" Margin="0,0,0,12"/>

            <StackPanel Spacing="4">
                <TextBlock Text="Built with WinUI 3 and Windows App SDK"
                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                <TextBlock Text="OCR powered by Windows.Media.Ocr"
                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                <TextBlock Text="Inspired by TextExtractor for macOS"
                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Page>

